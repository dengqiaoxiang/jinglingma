page{
  background-color: #f7f7f7;
}
.order-top{
  position: relative;
  width: 100%;
	height: 276rpx;
  padding-top: 70rpx;
  margin-bottom: 110rpx;
	background: linear-gradient(90deg, #61d96b 0%, #04f0c3 100%), 
  	linear-gradient(#ff2200, #ff2200);
}
.order-top .status{
  margin-left: 94rpx;
  font-size: 34rpx;
	color: #e5ffe7;
}
.order-top .userInfo{
  bottom: -80rpx;
  width: 92%;
	height: 160rpx;
  padding: 40rpx 57rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  box-sizing: border-box;
}

.userInfo .fsc{
  font-size: 28rpx;
}
.userInfo .fdefc{
  position: relative;
  margin-top: 20rpx;
  font-size: 28rpx;
}
.userInfo .fdefc image{
  position: absolute;
  left: -47rpx;
  width: 36rpx;
	height: 36rpx;
}


.order{
  width: 92%;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.order-header{
  padding: 25rpx 20rpx;
  font-size: 28rpx;
}
.order-header .red{color: #61d96b}
.order-header view:last-child{
  color: #999;  
}
.order-body{
  padding: 30rpx 20rpx;
}
.order-body>view{
  margin-bottom: 30rpx;
}
.order-body>view:last-child{margin-bottom: 0;}
.order-item image{
  width: 120rpx;
  height: 120rpx;
	border-radius: 10rpx;
}
.order-item>view{
  position: relative;
  width: 81.538%;
  height: 120rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.order-item .item-title{
  font-size: 28rpx;
}
.order-item .item-case{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  padding-left: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.order-item .item-case>view:first-child{
   font-size: 24rpx;
  color: #999;
}

.order-total{
  padding: 30rpx 20rpx;
}
.order-total>view{
  margin-bottom: 30rpx;
  font-size: 32rpx;
  line-height: 1;
	color: #010101;
}
.order-total>view:last-child{margin-bottom: 0}
.order-total>view>view:first-child{
  color: #999;
}
.order-total .actual>view:first-child{
  color: #000;
}
.order-total .actual>view:last-child{
  color: #61d96b;
}

.order-case,.order-remark{
  width: 92%;
  margin: 30rpx auto;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  line-height: 1;
  box-sizing: border-box;
}
.order-case,.order-remark>view:first-child{margin-right: 20rpx;}
.order-case>view{
  margin-bottom: 28rpx;
}
.order-case>view:last-child{
  margin-bottom: 0
}



