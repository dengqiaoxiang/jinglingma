/**index.wxss**/
@import "/component/footer/footer.wxss";
.container{
  background-size: 100% 276rpx;
}
.user{
  width: 690rpx;
  margin: 30rpx 0 40rpx;
}
.user-img{
  width: 120rpx;
	height: 120rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}
.user-info view{font-size: 32rpx;color: #fff;}
.user-info .fdefc{font-size: 36rpx;margin-bottom: 5rpx;}
.user-info .fdefc view{
  width: 130rpx;
	height: 32rpx;
  margin-left: 12rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  background-color: rgba(0,0,0,.36);
	border-radius: 16rpx;
}
.user-info>button{
  font-size: 26rpx;
}
.modal .modal-layer{
  top: 50%; 
  left: 50%;
  transform: translate(-50%,-50%) 
}
.modal-body .logo{
  margin: 80rpx 0;
  text-align: center;
}
.modal-body .logo image{width: 200rpx;height: 200rpx;}
.modal-body .input input{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 50rpx auto;
  padding: 0 10rpx;
  font-size:36rpx;
  border-bottom: 1px solid #61d96b;
}
.modal-body button{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 20rpx auto;
  text-align:center;
  font-size: 36rpx;
  color:#ffffff;
  background-color:#61d96b;
  border-radius: 50rpx;
}


.numder{
  width: 690rpx;
	padding: 27rpx 0;
  background-color: #ffffff;
	border-radius: 10rpx;
}
.numder .numder-li{
  width: 50%;
  text-align: center;
}
.numder-li view:first-child{
  position: relative;
  font-size: 32rpx;
	line-height: 40rpx;
	color: #61d96b;
}
.numder-li view:first-child::after{
  content: "";
  position: absolute;
  top: 4rpx;
  right: -1rpx;
  width: 2rpx;
	height: 50rpx;
	background-color: #d5d5d5;
}
.numder-li view:last-child{
  font-size: 28rpx;
	line-height: 40rpx;
	color: #535353;
}
.links-list{
  width: 690rpx;
  padding: 60rpx 17rpx 0;
  margin-top: 30rpx;
	background-color: #ffffff;
	border-radius: 10rpx;  
}
.link-li{
  width: 25%;
  text-align: center;
  margin-bottom: 60rpx;
}
.link-li view:first-child image{
  width: 50rpx;
	height: 50rpx;
}
.link-li view:last-child{
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
	color: #535353;
}
