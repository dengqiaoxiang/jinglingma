.authorize{padding: 0 50rpx;box-sizing: border-box;}
.authorize-img{
  padding: 80rpx 0;
  text-align: center;
  border-bottom: 4rpx solid #808089;
}
.authorize-img>image{width: 200rpx;height: 200rpx;}
.authorize-tip{
  margin: 50rpx 0 20rpx;
  font-size: 40rpx;
}
.authorize-msg{
  margin-bottom: 50rpx;
  font-size: 36rpx;
  color: #808089;
}
.authorize>button{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align:center;
  font-size: 36rpx;
  color:#ffffff;
  background-color:#61d96b;
  border-radius: 50rpx;
}