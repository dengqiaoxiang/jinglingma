page{
  background-color: #f7f7f7;
}
.order-tabs{
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  white-space: nowrap;
}
.order-tabs view{
  display: inline-block;
  min-width: 160rpx;
  padding: 23rpx 0 17rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  line-height: 1;
  text-align: center;
  border-bottom: 4rpx solid transparent;
}
.order-tabs view.active{
  text-align: center;
  color: #61d96b;
  border-bottom-color: #61d96b;
}


.order{
  width: 92%;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.order-header{
  padding: 25rpx 20rpx;
  font-size: 28rpx;
}
.order-header view:last-child{
  color: #999;  
}
.order-header .red{color: #61d96b}
.order-body{
  padding: 30rpx 20rpx;
}
.order-body>view{
  margin-bottom: 30rpx;
}
.order-body>view:last-child{margin-bottom: 0;}
.order-item image{
  width: 120rpx;
  height: 120rpx;
	border-radius: 10rpx;
}
.order-item>view{
  position: relative;
  width: 81.538%;
  height: 120rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.order-item .item-title{
  font-size: 28rpx;
}
.order-item .item-case{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  padding-left: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.order-item .item-case>view:first-child{
   font-size: 24rpx;
  color: #999;
}

.order-total{
  padding: 20rpx;
}
.order-total>view{
  text-align: right;
  font-size: 32rpx;
	color: #010101;
}
.order-total>.fr{
  width: 150rpx;
	height: 54rpx;
  line-height: 54rpx;
  margin-top: 24rpx;
  font-size: 28rpx;
  text-align: center;
	color: #fff;
	background-color: #ffa42d;
	border-radius: 10rpx;
  box-sizing: border-box;
}
.order-total .fr.cancle{
  margin-right: 20rpx;
  color: #666;
	background-color: transparent;
  border: solid 1px #666;
}

.order-empty{
  margin-top: 213rpx;
}
.order-empty>image{
  display: inline-block;
  width: 437rpx;
  height: 454rpx;
}


