page{
  background-color: #f7f7f7;
}
.order-top{
  position: relative;
  width: 100%;
	height: 150rpx;
  margin-bottom: 110rpx;
	background: linear-gradient(90deg, #61d96b 0%, #04f0c3 100%), 
  	linear-gradient(#ff2200, #ff2200);
}
.order-top .status{
  margin-left: 94rpx;
  font-size: 34rpx;
	color: #e5ffe7;
}
.order-top .userInfo{
  bottom: -80rpx;
  width: 92%;
	height: 160rpx;
  padding: 40rpx 57rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  box-sizing: border-box;
}

.userInfo .fsc{
  font-size: 34rpx;
	color: #61d96b;
}
.userInfo .fsc text{margin-left: 20rpx;}
.userInfo .fsc>navigator{
  font-size: 26rpx;
	color: #999;
}

.userInfo>view{
  font-size: 28rpx;
	color: #666;
}



.order{
  width: 92%;
  margin: 0 auto;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}

.order-header{
  padding: 25rpx 20rpx;
  font-size: 28rpx;
}
.order-header navigator{
  font-size: 26rpx;
	color: #61d96b;
}

.order-body>view{
  padding: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
.order-item image{
  width: 120rpx;
  height: 120rpx;
	border-radius: 10rpx;
}
.order-item>view{
  position: relative;
  width: 81.538%;
  height: 120rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.order-item .item-title{
  font-size: 28rpx;
}
.order-item .item-case{
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  padding-left: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.order-item .item-case>view:first-child{
   font-size: 24rpx;
  color: #999;
}

.order-total{
  padding: 30rpx 20rpx;
}
.order-total>view{
  margin-bottom: 30rpx;
  font-size: 32rpx;
  line-height: 1;
	color: #010101;
}
.order-total>view text{font-size: 24rpx;}
.order-total>view:last-child{margin-bottom: 0}
.order-total .actual>view:last-child{
  color: #61d96b;
}

.order-remark view{
  font-size: 26rpx;
  margin-bottom: 30rpx;
}
.order-remark textarea{
  height: 100rpx;
  font-size: 26rpx;
	color: #666;
  border-radius: 10rpx;
}
.order-case,.order-remark{
  width: 92%;
  margin: 30rpx auto;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  line-height: 1;
  box-sizing: border-box;
}
.order-case>view{
  margin-bottom: 28rpx;
}
.order-case>view>view{font-size: 26rpx;}
.order-case>view>view text{color: #666;}
.order-case>view image{
  max-width: 30rpx;
	height: 26rpx;
  margin-right: 10rpx;
}
.order-case>view:last-child {margin-bottom: 0;}
.order-case>view>view:last-child{
  color: #666;
}

.toBuy{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  padding-left: 30rpx;
  background: #fff;
  box-sizing: border-box;
}
.toBuy .price{
	font-size: 34rpx;
}
.toBuy .price text{
  font-size: 36rpx;
	color: #ffa42d;
}

.toBuy .sure{
  width: 350rpx;
  height: 100%;
  font-size: 34rpx;
  text-align: center;
	color: #fff;
	background-color: #ffa42d;
  margin: 0;
  border: 0;
  outline: 0;
  border-radius: 0;
}



